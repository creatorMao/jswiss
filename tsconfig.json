{
  "compilerOptions": {
    "target": "ES2020", // 编译目标版本
    "module": "es2015", // 模块系统（或 "ESNext"）
    "esModuleInterop": true, // 生成 sourcemap
    "outDir": "./dist", // 输出目录
    "rootDir": "./src", // 源码目录
    "declaration": true, // 生成 .d.ts 类型声明
    "sourceMap": true, // 生成 sourcemap
    "moduleResolution": "bundler",
    "strict": true //
  },
  "include": ["./src/**/*"]
}
